 </head>
<body>
  <div id="container">
    <div id="user_header">
  <%  if current_user %>
    Signed in as <%=  current_user.email.split("@").first%>  | <%= link_to "Logout", '/logout' %>
     <%  else  %>
    <%=  link_to "Signup", signup_path  %> | <%= link_to "Login",  login_path  %>
  </div>

  <%  end %>

  <%= yield %>
</body>

</html>
